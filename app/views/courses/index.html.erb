<h1><%= t('activemodel.action.title.listing', :model => Course.model_name.human) %></h1>
<ul class="breadcrumb">
  <li><%= link_to t('activerecord.models.home'), root_path%></li>
  <li class="active"><%= t('activerecord.models.course.other')%></li>
</ul>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.course.name') %></th>
      <th><%= t('activerecord.attributes.course.description') %></th>
      <th><%= t('activerecord.attributes.course.status') %></th>
      <th colspan="3"><%= t('activemodel.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.status %></td>
        <td><%= link_to t('activemodel.show'), course, class: 'btn btn-info' %></td>
        <td><%= link_to t('activemodel.edit'), edit_course_path(course), class: 'btn btn-warning' %></td>
        <td><%= link_to t('activemodel.destroy'), course, method: :delete, data: { confirm: t('activerecord.confirm')  }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('helpers.submit.create', :model => Course.model_name.human), new_course_path,  class: 'btn btn-primary'%>
