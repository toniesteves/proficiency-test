<%= simple_form_for(@classroom) do |f| %>
  <%= f.error_notification %>

<div class="form-inputs">
	<div class="form-group">
	  <%=  f.select :student_id, Student.all.map{ |s| [s.name, s.id, {:name => s.name.downcase}] } ,  input_html: { class: 'form-control' }%>
	</div>
	  <br>
	<div class="form-group">
		<%=  f.select :course_id, Course.all.map{ |s| [s.name, s.id, {:name => s.name.downcase}] } ,  input_html: { class: 'form-control' }%>                 
	</div>
	<br>
	<div class="form-group">
	  <%= f.input :entry_at, placeholder: 'Status', input_html: { class: 'form-control' } %><br>
	</div>
</div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
