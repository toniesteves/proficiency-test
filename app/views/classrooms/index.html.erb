<h1><%= t('activemodel.action.title.listing', :model => Classroom.model_name.human) %></h1>

<ul class="breadcrumb">
  <li><%= link_to t('activerecord.models.home'), root_path%></li>
  <li class="active"><%= t('activerecord.models.classroom.other')%></li>
</ul>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.classroom.student_id') %></th>
      <th><%= t('activerecord.attributes.classroom.course_id') %></th>
      <th><%= t('activerecord.attributes.classroom.entry_at') %></th>
      <th colspan="3"><%= t('activemodel.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.student.name %></td>
        <td><%= classroom.course.name %></td>
        <td><%=l classroom.entry_at, format: :long %></td>
        <td><%= link_to t('activemodel.show'), classroom, class: 'btn btn-info' %></td>
        <td><%= link_to t('activemodel.edit'), edit_classroom_path(classroom), class: 'btn btn-warning' %></td>
        <td><%= link_to t('activemodel.destroy'), classroom, method: :delete, data: { confirm: t('activerecord.confirm')  }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('helpers.submit.create', :model => Classroom.model_name.human), new_classroom_path, class: 'btn btn-primary' %>
