<h1><%= t('activemodel.action.title.listing', :model => Classroom.model_name.human) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.classroom.student_id') %></th>
      <th><%= t('activerecord.attributes.classroom.course_id') %></th>
      <th><%= t('activerecord.attributes.classroom.entry_at') %></th>
      <th colspan="3"><%= t('activemodel.action') %></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.student_id %></td>
        <td><%= classroom.course_id %></td>
        <td><%=l classroom.entry_at, format: :default %></td>
        <td><%= link_to t('activemodel.show'), classroom %></td>
        <td><%= link_to t('activemodel.edit'), edit_classroom_path(classroom) %></td>
        <td><%= link_to t('activemodel.destroy'), classroom, method: :delete, data: { confirm: t('activerecord.confirm')  } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('helpers.submit.destroy', :model => Classroom.model_name.human), new_classroom_path %>
