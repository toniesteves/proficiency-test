<%= simple_form_for(@student) do |f| %>
  <%= f.error_notification %>

<div class="form-group">
  <%= f.input :register_number, placeholder: 'Nº de Matrícula', input_html: { class: 'form-control' } %><br>
</div>
<div class="form-group">
  <%= f.input :name, placeholder: 'Nome do Aluno', input_html: { class: 'form-control' } %><br>
</div>
<div class="form-group">
  <%= f.input :status, placeholder: 'Status', input_html: { class: 'form-control' } %><br>
</div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
